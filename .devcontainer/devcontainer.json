{
	"name": "Bonfire Clicker DEV",
	"build": {
		"dockerfile": "../docker/Dockerfile",
		"context": ".."
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"eamodio.gitlens"
			]
		}
	},
	// run npx vite in the background, and don't save nohup output
	"postStartCommand": "nohup /bin/sh -c 'npx vite &' >/dev/null 2>&1",
	"postAttachCommand": "/bin/sh"
}